{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "ESNext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "src/data/*"]
    },
    "resolveJsonModule": true
    // "types": ["@fortawesome/fontawesome-svg-core"]
  }
}
